<h2>Login</h2>

<form asp-controller="Authentication" asp-action="Login" method="POST">
    <div class="input-group mt-2">
        <div class="input-group-prepend">
            <span class="input-group-text">Email</span>
        </div>
        <input type="text" class="form-control" aria-label="Email" />
    </div>

    <div class="input-group mt-2">
        <div class="input-group-prepend">
            <span class="input-group-text">Password</span>
        </div>
        <input type="text" class="form-control" aria-label="Email" />
    </div>

    <input type="submit" class="form-control" value="Login" />
</form>

<input type="button" class="btn btn-primary" value="Sign Up" onclick="@("window.location.href='" + @Url.Action("RegisterView", "Authentication") + "'");" />

