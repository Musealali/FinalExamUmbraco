@model List<SecurityIssuePostViewModel>
@{
    ViewData["Title"] = "VerifiedPosts";
}

<h1>VerifiedPosts</h1>
<form asp-controller="SecurityIssuePost" asp-action="GetVerifiedSecurityIssuePosts" method="get">
    <p>
        <input type="text" name="searchString" placeholder="Search for Security issue post..." style="width : 80%">
        <input type="submit" value="Search" style="width : 19%" />
    </p>
</form>
@if (Model.Count == 0)
{
    <h1>No Posts found</h1>
}
<div class="main">

    @foreach (SecurityIssuePostViewModel securityIssuePostViewModel in Model)
    {
        <a asp-controller="SecurityIssuePost" asp-action="Index" asp-route-id="@securityIssuePostViewModel.Id" class="btn btn-primary mt-3" style="width : 100%; height : 50px">@securityIssuePostViewModel.Title</a>
    }
</div>