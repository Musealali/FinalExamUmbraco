@model web_platform.Models.SecurityIssuePost
@{
    ViewData["Title"] = "Create";
}
<h1>Create Security issue post</h1>
<form asp-controller="SecurityIssuePost" asp-action="Create" method="POST">

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" name="Title" class="form-control" id="InputTitle" placeholder="Enter a descriptive title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IssueDescription">Description</label>
        <input asp-for="IssueDescription" name="IssueDescription" class="form-control" id="InputIssueDescription" placeholder="Insert a description of the issue">
        <span asp-validation-for="IssueDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IssueReproduction">Reproduction steps</label>
        <input asp-for="IssueReproduction" name="IssueReproduction" class="form-control" id="InputIssueReproduction" placeholder="Insert a description on how to reproduce the error">
        <span asp-validation-for="IssueReproduction" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CMSComponentVersion.CMSComponent.Name">Test validering</label>
        <input asp-for="CMSComponentVersion.CMSComponent.Name" name="CMSComponentVersion.CMSComponent.Name" class="form-control" id="InputCMSComponentVersion.CMSComponent.Name" placeholder="test">
        <span asp-validation-for="CMSComponentVersion.CMSComponent.Name" class="text-danger"></span>
    </div>



    <select class="form-control" name="componentType" onchange="javascript: dynamicdropdown(this.options[this.selectedIndex].value);">
        <option disabled selected>Select your option</option>
        <option value="package">Package</option>
        <option value="cms">CMS</option>
    </select>
    <script type="text/javascript" language="JavaScript">
        document.write('<select class="form-control" name="name" id="name"><option disabled selected>Select status</option></select>')
    </script>
    <input style="float: left; width: 100%" placeholder="Version" type="text" name="version">


    <button type="submit" class="btn btn-primary">Submit</button>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

