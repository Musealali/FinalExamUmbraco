@model web_platform.Models.SecurityIssuePost
@{
    ViewData["Title"] = "Create";
}
<h1>Create Security issue post</h1>
<body>
    <form action="/SecurityIssuePost/CreateSecurityIssuePost" method="post">
        <label style="float: left" for="Title">title</label>
        <input style="float: left; width: 100%" placeholder="Title" type="text" name="Title" />
        <label style="float: left" for="IssueDescription">Description</label>
        <textarea style="float: left; width: 100%; height: 100px" name="IssueDescription"></textarea>
        <label style="float: left" for="IssueReproduction">Steps to reproduce</label>
        <textarea style="float: left; width: 100%; height: 100px" name="IssueReproduction"></textarea>
        <input style="float:left" type="submit" name="submit" />
    </form>
</body>

